<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav_driverlostandfound">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFEF8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:text="REPORT YOUR LOST ITEM"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="62dp"
            android:text="LOST &amp; FOUND"
            android:textColor="#2C2C2C"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="135dp"
            android:entries="@array/triphistory" />

        <!--
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="121dp"
            android:background="@android:drawable/btn_dropdown"
            android:popupBackground="#FFEE7C"
            android:spinnerMode="dropdown" -->


        <EditText
            android:id="@+id/description"
            android:layout_width="339dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="186dp"
            android:background="#2C2C2C"
            android:ems="10"
            android:gravity="top"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:paddingLeft="2dp"
            android:textColor="#FFEE7C"
            android:textColorHint="#FFEE7C"
            android:textSize="14sp"
            android:visibility="visible" />


        <EditText
            android:id="@+id/textView4"
            android:layout_width="340dp"
            android:layout_height="26dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="164dp"
            android:background="#2C2C2C"
            android:gravity="center"
            android:hint="Phone Number"
            android:inputType="phone"
            android:textColor="#FFEE7C"
            android:textColorHint="#FFEE7C"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="340dp"
            android:layout_height="26dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="116dp"
            android:background="#2C2C2C"
            android:ems="10"
            android:gravity="center"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:textColor="#FFEE7C"
            android:textColorHint="#FFEE7C"
            android:textSize="14sp" />


        <Button
            android:id="@+id/button"
            android:layout_width="355dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp"
            android:background="#FFEE7C"
            android:text="SUBMIT"
            android:textSize="18sp" />

    </RelativeLayout>

</FrameLayout>