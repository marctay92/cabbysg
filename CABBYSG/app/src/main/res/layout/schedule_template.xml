<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relLayout"
        android:layout_width="360dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/yellow_rectangle_box1"
            android:layout_width="360dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/yellow_rectangle_box" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/s_profile"
            android:layout_width="95dp"
            android:layout_height="104dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/profile"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <ImageView
            android:id="@+id/star1"
            android:layout_width="13dp"
            android:layout_height="18dp"
            android:layout_alignTop="@+id/s_price"
            android:layout_toEndOf="@+id/s_profile"
            android:layout_marginLeft="5dp"
            android:src="@drawable/star" />


        <TextView
            android:id="@+id/s_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:paddingLeft="10dp"
            android:text="14 APRIL 18"
            android:textColor="#2C2C2C"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/s_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/s_date"
            android:paddingLeft="8dp"
            android:text="13:40"
            android:textColor="#2C2C2C"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/s_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/s_profile"
            android:layout_marginLeft="5dp"
            android:text="John Tan"
            android:textColor="#2C2C2C"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/s_price"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s_carplatenumber"
            android:layout_alignParentEnd="true"
            android:text="20.00"
            android:textColor="#2C2C2C" />

        <TextView
            android:id="@+id/sgd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/s_price"
            android:layout_alignParentEnd="true"
            android:text="SGD "
            android:textColor="#2C2C2C"
            android:textSize="8sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/s_carplatenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s_name"
            android:layout_toEndOf="@+id/s_profile"
            android:layout_marginLeft="5dp"
            android:text="SGC6582Y"
            android:textColor="#2C2C2C" />

        <TextView
            android:id="@+id/s_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/star1"
            android:layout_toEndOf="@+id/s_time"
            android:text="4.5  "
            android:textColor="#2C2C2C" />

        <View
            android:id="@+id/line1"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/fare1"
            android:layout_gravity="center"
            android:layout_marginBottom="21dp"
            android:background="#2C2C2C" />


        <View
            android:layout_width="153dp"
            android:layout_height="1dp"
            android:layout_above="@+id/sgd1"
            android:layout_gravity="center"
            android:layout_marginStart="-41dp"
            android:layout_toEndOf="@+id/s_type"
            android:background="#2C2C2C" />

        <View
            android:layout_width="152dp"
            android:layout_height="1dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/s_type"
            android:layout_gravity="center"
            android:background="#2C2C2C" />

        <TextView
            android:id="@+id/fare1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s_carplatenumber"
            android:layout_toStartOf="@+id/dollarsign"
            android:paddingLeft="5dp"
            android:text="Fare: "
            android:textColor="#2C2C2C"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dollarsign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s_carplatenumber"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="56dp"
            android:paddingLeft="5dp"
            android:text="$ "
            android:textColor="#2C2C2C"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/s_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/star1"
            android:layout_toStartOf="@+id/s_location"
            android:text="Fastest"
            android:textColor="#2C2C2C"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/emptycircle1"
            android:layout_width="5dp"
            android:layout_height="13dp"
            android:layout_alignStart="@+id/blackcircle1"
            android:layout_alignTop="@+id/s_profile"
            android:src="@drawable/emptycircle" />

        <ImageView
            android:id="@+id/blackcircle1"
            android:layout_width="6dp"
            android:layout_height="13dp"
            android:layout_alignBottom="@+id/s_name"
            android:layout_alignParentEnd="true"
            android:layout_toLeftOf="@+id/s_destination"
            android:layout_marginEnd="150dp"
            android:src="@drawable/blackcircle" />

        <View
            android:id="@+id/greyspacebar"
            android:layout_width="2dp"
            android:layout_height="18dp"
            android:layout_alignStart="@+id/emptycircle1"
            android:layout_below="@+id/emptycircle1"
            android:layout_gravity="center"
            android:background="#9D9D9D" />

        <TextView
            android:id="@+id/s_location"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/s_date"
            android:text="Ubi Mrt Station"
            android:textColor="#2C2C2C"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/s_destination"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/s_type"
            android:text="Orchard Ion"
            android:textColor="#2C2C2C"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/s_cancel"
            android:layout_width="30dp"
            android:layout_height="31dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/cancelbutton" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>