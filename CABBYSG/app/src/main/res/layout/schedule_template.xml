<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relLayout"
        android:layout_width="360dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/yellow_rectangle_box1"
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/yellow_rectangle_box" />

        <ImageView
            android:id="@+id/sample1"
            android:layout_width="109dp"
            android:layout_height="90dp"
            android:paddingLeft="10dp"
            android:layout_alignStart="@+id/s_date"
            android:layout_alignTop="@+id/profile"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/white_rectangle_box" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_alignEnd="@+id/star1"
            android:layout_centerVertical="true"
            android:src="@drawable/profile" />

        <ImageView
            android:id="@+id/star1"
            android:layout_width="13dp"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/star" />


        <TextView
            android:id="@+id/s_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="10dp"
            android:layout_marginTop="12dp"
            android:text="14 APRIL 18"
            android:textColor="#2C2C2C"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/s_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:paddingLeft="3dp"
            android:layout_toEndOf="@+id/s_date"
            android:text="13:40"
            android:textColor="#2C2C2C"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/s_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/profile"
            android:layout_below="@+id/profile"
            android:layout_marginStart="0dp"
            android:text="John Tan"
            android:textColor="#2C2C2C" />

        <TextView
            android:id="@+id/s_price"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/sgd1"
            android:text="20.00"
            android:textColor="#2C2C2C" />

        <TextView
            android:id="@+id/sgd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/profile"
            android:text="SGD "
            android:textColor="#2C2C2C"
            android:textSize="8sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/s_carplatenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sample1"
            android:layout_alignEnd="@+id/profile"
            android:text="SGC6582Y"
            android:textColor="#2C2C2C" />

        <TextView
            android:id="@+id/s_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/star1"
            android:text="4.5  "
            android:textColor="#2C2C2C" />

        <View
            android:id="@+id/line1"
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/sample1"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginEnd="97dp"
            android:background="#2C2C2C" />

        <View
            android:layout_width="153dp"
            android:layout_height="1dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/profile"
            android:layout_gravity="center"
            android:layout_marginTop="-1dp"
            android:background="#2C2C2C" />

        <View
            android:layout_width="154dp"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/sample1"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:background="#2C2C2C" />

        <TextView
            android:id="@+id/fare1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/line1"
            android:layout_below="@+id/profile"
            android:paddingLeft="5dp"
            android:text="Fare: "
            android:textColor="#2C2C2C"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dollarsign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sgd1"
            android:layout_marginTop="0dp"
            android:layout_toStartOf="@+id/s_price"
            android:paddingLeft="5dp"
            android:text="$ "
            android:textColor="#2C2C2C"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/s_type"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignBottom="@+id/sample1"
            android:layout_alignStart="@+id/emptycircle1"
            android:layout_marginStart="0dp"
            android:text="Fastest"
            android:textColor="#2C2C2C"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/emptycircle1"
            android:layout_width="5dp"
            android:layout_height="13dp"
            android:layout_above="@+id/sample1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="137dp"
            android:src="@drawable/emptycircle" />

        <ImageView
            android:id="@+id/blackcircle1"
            android:layout_width="6dp"
            android:layout_height="13dp"
            android:layout_alignStart="@+id/emptycircle1"
            android:layout_centerVertical="true"
            android:layout_marginStart="-1dp"
            android:src="@drawable/blackcircle" />

        <View
            android:layout_width="2dp"
            android:layout_height="17dp"
            android:layout_alignStart="@+id/emptycircle1"
            android:layout_alignTop="@+id/sample1"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:background="#9D9D9D" />

        <TextView
            android:id="@+id/s_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/s_destination"
            android:layout_alignTop="@+id/emptycircle1"
            android:text="Ubi Mrt Station"
            android:textColor="#2C2C2C"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/s_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/s_price"
            android:text="Orchard Ion"
            android:textColor="#2C2C2C"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/s_cancel"
            android:layout_width="30dp"
            android:layout_height="31dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/cancelbutton" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>