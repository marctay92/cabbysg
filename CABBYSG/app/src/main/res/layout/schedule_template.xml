        <View
            android:id="@+id/line1"
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/line2"
            android:layout_gravity="center"
