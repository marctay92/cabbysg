<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".nav_history">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="62dp"
            android:layout_weight="0"
            android:gravity="center"
            android:text="HISTORY"
            android:textColor="#2C2C2C"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listOfDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="62dp"
            android:layout_weight="0"
            android:gravity="center"
            android:text="HISTORY"
            android:textColor="#2C2C2C"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/relLayout1"
            android:layout_width="360dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/history2BlackBox"
                android:layout_width="360dp"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/black_rectangle_box" />

            <ImageView
                android:id="@+id/sample1"
                android:layout_width="334dp"
                android:layout_height="84dp"
                android:layout_below="@+id/history2Date"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/yellow_rectangle_box" />

            <ImageView
                android:id="@+id/history2Profile"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_alignStart="@+id/sample1"
                android:layout_alignTop="@+id/history2Name"
                android:src="@drawable/yellowprofile" />

            <ImageView
                android:id="@+id/star1"
                android:layout_width="13dp"
                android:layout_height="18dp"
                android:layout_alignTop="@+id/history2Profile"
                android:layout_toEndOf="@+id/history2CarPlate"
                android:src="@drawable/yellowstar" />

            <TextView
                android:id="@+id/sampletext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="47dp"
                android:text="MAP TRIP HISTORY"
                android:textColor="#2C2C2C"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/history2Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text=" 11 APRIL 18"
                android:textColor="#FFE446" />

            <TextView
                android:id="@+id/history2Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/history2Date"
                android:paddingLeft="10dp"
                android:text=" 11:00"
                android:textColor="#FFE446" />

            <TextView
                android:id="@+id/history2Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="59dp"
                android:layout_toEndOf="@+id/history2Date"
                android:text="Jo Tan"
                android:textColor="#FFEE7C" />

            <TextView
                android:id="@+id/history2CarPlate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/history2Name"
                android:layout_below="@+id/history2Name"
                android:layout_marginTop="-59dp"
                android:text="SHG2634A"
                android:textColor="#FFEE7C" />

            <TextView
                android:id="@+id/history2CarModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/history2Profile"
                android:layout_alignStart="@+id/history2Name"
                android:text="Hyundai i40"
                android:textColor="#FFEE7C" />

            <TextView
                android:id="@+id/history2Fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/history2Name"
                android:layout_marginEnd="23dp"
                android:layout_marginTop="-59dp"
                android:text="$ 20.00"
                android:textColor="#FFFCB7" />

            <TextView
                android:id="@+id/sgd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/history2Name"
                android:layout_marginTop="-59dp"
                android:text="SGD"
                android:textColor="#FFFCB7"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/history2Rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/history2Route"
                android:layout_alignTop="@+id/history2Name"
                android:text="3.9  "
                android:textColor="#FFE446" />

            <View
                android:id="@+id/line1"
                android:layout_width="1dp"
                android:layout_height="22dp"
                android:layout_alignEnd="@+id/sampletext1"
                android:layout_below="@+id/star1"
                android:layout_gravity="center"
                android:background="#FFE446" />

            <View
                android:layout_width="161dp"
                android:layout_height="1dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/history2Name"
                android:layout_gravity="center"
                android:layout_marginTop="-59dp"
                android:background="#FFE446" />

            <View
                android:id="@+id/line2"
                android:layout_width="161dp"
                android:layout_height="1dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/line1"
                android:layout_gravity="center"
                android:background="#FFE446" />

            <TextView
                android:id="@+id/wordFare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/star1"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/history2Fare"
                android:text="Fare: "
                android:textColor="#FFEE7C"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/history2Route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/star1"
                android:layout_toEndOf="@+id/star1"
                android:text="Shortest"
                android:textColor="#FFEE7C"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/emptyyellowcircle"
                android:layout_width="5dp"
                android:layout_height="13dp"
                android:layout_alignEnd="@+id/history2Date"
                android:layout_centerVertical="true"
                android:src="@drawable/emptyyellowcircle" />

            <ImageView
                android:id="@+id/yellowcircle"
                android:layout_width="6dp"
                android:layout_height="25dp"
                android:layout_alignEnd="@+id/history2Date"
                android:layout_alignTop="@+id/location2"
                android:src="@drawable/yellowcircle" />

            <View
                android:layout_width="2dp"
                android:layout_height="17dp"
                android:layout_alignEnd="@+id/history2Date"
                android:layout_below="@+id/emptyyellowcircle"
                android:layout_gravity="center"
                android:background="#9D9D9D" />

            <TextView
                android:id="@+id/history2From"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="426 Bukit Timah"
                android:textColor="#FFEE7C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/history2To"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_above="@+id/history2Profile"
                android:layout_centerHorizontal="true"
                android:text="Zouk Singapore"
                android:textColor="#FFEE7C"
                android:textSize="14sp" />

        </RelativeLayout>

        <android.support.v7.widget.AppCompatSpinner
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:entries="@array/reportissue">

        </android.support.v7.widget.AppCompatSpinner>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:background="#FFE446"
            android:text="Submit" />


    </LinearLayout>

</FrameLayout>