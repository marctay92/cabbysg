<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav_history">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="62dp"
            android:layout_weight="0"
            android:gravity="center"
            android:text="HISTORY"
            android:textColor="#2C2C2C"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!--
      Trip 1
      -->
        <RelativeLayout
            android:id="@+id/relLayout1"
            android:layout_width="360dp"
            android:layout_height="127dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/black_rectangle_box1"
                android:layout_width="360dp"
                android:layout_height="127dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/black_rectangle_box" />

            <ImageView
                android:id="@+id/sample1"
                android:layout_width="350dp"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/white_rectangle_box" />

            <TextView
                android:id="@+id/sampletext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="27dp"
                android:text="MAP TRIP HISTORY"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/sample1"
                android:layout_below="@+id/sample1"
                android:text="11 APRIL 18 | 15:20"
                android:textColor="#FFE446" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/sample1"
                android:layout_below="@+id/date1"
                android:text="Jo Tan"
                android:textColor="#FFFCB7" />

            <TextView
                android:id="@+id/carplateno1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/date1"
                android:layout_marginStart="93dp"
                android:text="SHG2634A"
                android:textColor="#FFFCB7" />

            <TextView
                android:id="@+id/tripfare1"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/date1"
                android:text="$ 20.00"
                android:textColor="#FFFCB7" />

            <TextView
                android:id="@+id/sgd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/date1"
                android:layout_alignEnd="@+id/sample1"
                android:text="SGD"
                android:textColor="#FFFCB7"
                android:textSize="8sp"
                android:textStyle="bold" />


        </RelativeLayout>


        <!--
        Trip 2
        -->
        <RelativeLayout
            android:id="@+id/relLayout2"
            android:layout_width="360dp"
            android:layout_height="127dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/black_rectangle_box2"
                android:layout_width="362dp"
                android:layout_height="127dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/black_rectangle_box" />

            <ImageView
                android:id="@+id/sample2"
                android:layout_width="350dp"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/white_rectangle_box" />

            <TextView
                android:id="@+id/sampletext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="MAP TRIP HISTORY"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sample2"
                android:text="09 APRIL 18 | 20:0"
                android:textColor="#FFE446" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/date2"
                android:text="Lee Bee"
                android:textColor="#FFFCB7" />

            <TextView
                android:id="@+id/carplateno2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/date2"
                android:layout_marginStart="93dp"
                android:text="SHN9372X"
                android:textColor="#FFFCB7" />

            <TextView
                android:id="@+id/tripfare2"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/date2"
                android:text="$18.00"
                android:textColor="#FFFCB7" />

            <TextView
                android:id="@+id/sgd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/date2"
                android:layout_alignEnd="@+id/sample2"
                android:text="SGD"
                android:textColor="#FFFCB7"
                android:textSize="8sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>