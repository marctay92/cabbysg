<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav_home">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:visibility="invisible" />

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            tools:context=".MapsActivity"
            class="com.google.android.gms.maps.SupportMapFragment" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/relLayout1"
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:background="@drawable/white_border"
                android:elevation="10dp">

                <ImageView
                    android:id="@+id/ic_magnify"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="18dp"
                    android:layout_toLeftOf="@+id/input_search1"
                    android:layout_toStartOf="@+id/input_search1"
                    android:src="@drawable/ic_magnify" />

                <AutoCompleteTextView
                    android:id="@+id/input_search"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/ic_magnify"
                    android:layout_toRightOf="@+id/ic_magnify"
                    android:background="@null"
                    android:hint="Enter Address, City or Zip Code"
                    android:imeOptions="actionSearch"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/ic_magnify1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_magnify" />

                <AutoCompleteTextView
                    android:id="@+id/input_search1"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="85dp"
                    android:layout_marginRight="85dp"
                    android:layout_toEndOf="@+id/ic_magnify1"
                    android:layout_toRightOf="@+id/ic_magnify1"
                    android:background="@null"
                    android:hint="Destination"
                    android:imeOptions="actionSearch"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="21dp">

                    <TextView
                        android:id="@+id/disTextView"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/duraTextView"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/disTextView"
                        android:gravity="center_horizontal"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/fareTextView"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/duraTextView"
                        android:gravity="center_horizontal"
                        android:textColor="@android:color/black" />


                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout2"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/white_border"
                android:elevation="10dp">

                <EditText
                    android:id="@+id/mBookingTime"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/mRouteOptions"
                    android:layout_toStartOf="@+id/mRouteOptions"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:hint="Now"
                    android:inputType="date"
                    android:paddingLeft="7dp"
                    android:singleLine="false"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/mRouteOptions"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/mServiceType"
                    android:layout_toRightOf="@+id/mServiceType"
                    android:entries="@array/mRouteOptions" />

                <Spinner
                    android:id="@+id/mFareType"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_alignLeft="@+id/mRouteOptions"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/mRouteOptions"
                    android:entries="@array/mFareType" />

                <Spinner
                    android:id="@+id/mServiceType"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:entries="@array/mServiceType" />

                <ImageView
                    android:id="@+id/submitBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="19dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/enter" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp"
            android:orientation="vertical"
            android:visibility="invisible">

            <RelativeLayout
                android:id="@+id/relLayout3"
                android:layout_width="340dp"
                android:layout_height="87dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:background="@drawable/blackborder"
                android:elevation="10dp">

                <ImageView
                    android:id="@+id/cancelRequest"
                    android:layout_width="35dp"
                    android:layout_height="36dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/cancel_button" />

                <TextView
                    android:id="@+id/input_search3"
                    android:layout_width="206dp"
                    android:layout_height="37dp"
                    android:layout_above="@+id/input_search2"
                    android:layout_alignStart="@+id/input_search2"
                    android:background="@null"
                    android:text="Location"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/input_search2"
                    android:layout_width="205dp"
                    android:layout_height="37dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="85dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="85dp"
                    android:layout_marginStart="24dp"
                    android:background="@null"
                    android:text="Destination"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/white_circle" />

                    <TextView
                        android:id="@+id/acceptFareTextView"
                        android:layout_width="47dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:foregroundGravity="center_horizontal"
                        android:text="$13"
                        android:textAlignment="center"
                        android:textColor="@android:color/black" />


                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout4"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/blackborder"
                android:elevation="10dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/carPlateNo"
                    android:layout_below="@+id/carPlateNo"
                    android:text="Car Model"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="94dp"
                    android:layout_height="71dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/yellowprofile" />

                <TextView
                    android:id="@+id/driverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/carPlateNo"
                    android:layout_toEndOf="@+id/imageView4"
                    android:text="Driver Name"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/carPlateNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="129dp"
                    android:text="Car Plate"
                    android:textColor="@color/colorAccent" />

                <ImageView
                    android:id="@+id/callDriver"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="76dp"
                    android:src="@drawable/call_driver" />

                <ImageView
                    android:id="@+id/textDriver"
                    android:layout_width="39dp"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="18dp"
                    android:src="@drawable/text_driver" />
            </RelativeLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/ic_gps"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/linearLayout1"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="21dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_gps"
            android:layout_alignParentRight="true"
            android:layout_marginRight="21dp" />


    </RelativeLayout>

</FrameLayout>