<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav_home">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:visibility="invisible" />

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            tools:context=".MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relLayout1"
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:background="@drawable/white_border"
                android:elevation="10dp">

                <ImageView
                    android:id="@+id/ic_magnify"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="18dp"
                    android:layout_toLeftOf="@+id/input_search1"
                    android:layout_toStartOf="@+id/input_search1"
                    android:src="@drawable/ic_magnify" />

                <AutoCompleteTextView
                    android:id="@+id/input_search"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/ic_magnify"
                    android:layout_toRightOf="@+id/ic_magnify"
                    android:background="@null"
                    android:hint="Enter Address, City or Zip Code"
                    android:imeOptions="actionSearch"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/ic_magnify1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_magnify" />

                <AutoCompleteTextView
                    android:id="@+id/input_search1"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="85dp"
                    android:layout_marginRight="85dp"
                    android:layout_toEndOf="@+id/ic_magnify1"
                    android:layout_toRightOf="@+id/ic_magnify1"
                    android:background="@null"
                    android:hint="Destination"
                    android:imeOptions="actionSearch"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="21dp"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/disTextView"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/duraTextView"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/disTextView"
                        android:gravity="center_horizontal"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/fareTextView"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/duraTextView"
                        android:gravity="center_horizontal"
                        android:textColor="@android:color/black" />


                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout2"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/white_border"
                android:elevation="10dp">

                <EditText
                    android:id="@+id/mBookingTime"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toStartOf="@+id/mRouteOptions"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:hint="Now"
                    android:inputType="date"
                    android:paddingLeft="7dp"
                    android:singleLine="false"
                    android:textSize="14sp"
                    android:layout_toLeftOf="@+id/mRouteOptions" />

                <Spinner
                    android:id="@+id/mRouteOptions"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/mServiceType"
                    android:layout_toRightOf="@+id/mServiceType"
                    android:entries="@array/mRouteOptions" />

                <Spinner
                    android:id="@+id/mFareType"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/mRouteOptions"
                    android:entries="@array/mFareType"
                    android:layout_alignLeft="@+id/mRouteOptions" />

                <Spinner
                    android:id="@+id/mServiceType"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:entries="@array/mServiceType"
                    android:layout_alignParentLeft="true" />

                <ImageView
                    android:id="@+id/submitBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="19dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/enter"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="19dp" />
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ic_gps"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="21dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_gps"
            android:layout_alignParentRight="true"
            android:layout_marginRight="21dp" />



    </RelativeLayout>

</FrameLayout>