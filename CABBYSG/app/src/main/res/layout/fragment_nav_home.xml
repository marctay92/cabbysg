<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".nav_home">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="gone" />

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/relLayout1"
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:background="@drawable/white_border"
                android:elevation="10dp">

                <ImageView
                    android:id="@+id/ic_magnify"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="18dp"
                    android:layout_toLeftOf="@+id/input_search1"
                    android:layout_toStartOf="@+id/input_search1"
                    android:src="@drawable/ic_magnify" />

                <AutoCompleteTextView
                    android:id="@+id/input_search"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/ic_magnify"
                    android:layout_toRightOf="@+id/ic_magnify"
                    android:background="@null"
                    android:hint="Enter Address, City or Zip Code"
                    android:imeOptions="actionSearch"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/ic_magnify1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_magnify" />

                <AutoCompleteTextView
                    android:id="@+id/input_search1"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="85dp"
                    android:layout_marginRight="85dp"
                    android:layout_toEndOf="@+id/ic_magnify1"
                    android:layout_toRightOf="@+id/ic_magnify1"
                    android:background="@null"
                    android:hint="Destination"
                    android:imeOptions="actionSearch"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="21dp">

                    <TextView
                        android:id="@+id/disTextView"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/duraTextView"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/disTextView"
                        android:gravity="center_horizontal"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/fareTextView"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/duraTextView"
                        android:gravity="center_horizontal"
                        android:textColor="@android:color/black" />


                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout2"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/white_border"
                android:elevation="10dp">

                <EditText
                    android:id="@+id/mBookingTime"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:hint="Now"
                    android:inputType="date"
                    android:paddingLeft="0dp"
                    android:singleLine="false"
                    android:textColor="@android:color/black"
                    android:textSize="13sp" />

                <Spinner
                    android:id="@+id/mRouteOptions"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/mServiceType"
                    android:layout_toRightOf="@+id/mServiceType"
                    android:entries="@array/mRouteOptions" />

                <Spinner
                    android:id="@+id/mFareType"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/mBookingTime"
                    android:entries="@array/mFareType" />

                <Spinner
                    android:id="@+id/mServiceType"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:entries="@array/mServiceType" />

                <Spinner
                    android:id="@+id/mPaymentMethod"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="5dp" />

                <ImageView
                    android:id="@+id/submitBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="19dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/enter" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/relLayout3"
                android:layout_width="340dp"
                android:layout_height="87dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:background="@drawable/blackborder"
                android:elevation="10dp">

                <ImageView
                    android:id="@+id/cancelRequest"
                    android:layout_width="35dp"
                    android:layout_height="36dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/cancel_button" />

                <TextView
                    android:id="@+id/reqLocation"
                    android:layout_width="206dp"
                    android:layout_height="37dp"
                    android:layout_above="@+id/reqDestination"
                    android:layout_alignStart="@+id/reqDestination"
                    android:background="@null"
                    android:text="Location"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/reqDestination"
                    android:layout_width="205dp"
                    android:layout_height="37dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="85dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="85dp"
                    android:layout_marginStart="24dp"
                    android:background="@null"
                    android:text="Destination"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/white_circle" />

                    <TextView
                        android:id="@+id/reqFare"
                        android:layout_width="47dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:foregroundGravity="center_horizontal"
                        android:text="$13"
                        android:textAlignment="center"
                        android:textColor="@android:color/black" />


                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout4"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/blackborder"
                android:elevation="10dp">

                <TextView
                    android:id="@+id/reqModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reqPlateNo"
                    android:layout_toEndOf="@+id/driverPhoto"
                    android:text="Car Model"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/driverPhoto"
                    android:layout_width="94dp"
                    android:layout_height="71dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/yellowprofile" />

                <TextView
                    android:id="@+id/reqDriverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/reqPlateNo"
                    android:layout_toEndOf="@+id/driverPhoto"
                    android:text="Driver Name"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/reqPlateNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/driverPhoto"
                    android:text="Car Plate"
                    android:textColor="@color/colorAccent" />

                <ImageView
                    android:id="@+id/callDriver"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="76dp"
                    android:src="@drawable/call_driver" />

                <ImageView
                    android:id="@+id/textDriver"
                    android:layout_width="39dp"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="18dp"
                    android:src="@drawable/text_driver" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="300dp"
            android:layout_height="429dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:background="@android:color/black">

                <TextView
                    android:id="@+id/receiptTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="RECEIPT"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="80dp"
                    android:alpha="0.8"
                    android:text="FROM"
                    android:textColor="@color/colorAccent"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_marginBottom="39dp"
                    android:alpha="0.8"
                    android:text="TO"
                    android:textColor="@color/colorAccent"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/startingLocation"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="70dp"
                    android:layout_marginStart="62dp"
                    android:text="Location"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/endingDestination"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/startingLocation"
                    android:layout_marginTop="110dp"
                    android:text="Destination"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:alpha="0.7"
                    android:text="PAID WITH"
                    android:textColor="@color/colorAccent"
                    android:textSize="8sp" />

                <ImageView
                    android:id="@+id/paymentMethodImageView"
                    android:layout_width="43dp"
                    android:layout_height="35dp"
                    android:layout_alignEnd="@+id/textView7"
                    android:layout_below="@+id/textView2" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="266dp"
                android:background="@android:color/background_light">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="64dp"
                    android:layout_marginTop="12dp"
                    android:text="$" />

                <LinearLayout
                    android:id="@+id/endtripLinear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="53dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="47dp"
                            android:layout_weight="1"
                            android:text="FARE" />

                        <TextView
                            android:id="@+id/finalFare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="41dp"
                            android:hint="00.00"
                            android:inputType="numberDecimal"
                            android:textSize="14sp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/endTripLinear2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="99dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="35dp"
                            android:layout_weight="1"
                            android:text="TOLL FEE" />

                        <TextView
                            android:id="@+id/tollFees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="42dp"
                            android:layout_weight="1"
                            android:hint="00.00"
                            android:inputType="numberDecimal"
                            android:textSize="14sp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="88dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="40dp"
                            android:text="TOTAL"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/totalFare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="42dp"
                            android:text="00.00"
                            android:textSize="16sp" />

                    </RelativeLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/confirmReceipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:background="@android:color/white"
                    android:text="Done" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="345dp"
            android:layout_height="225dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/black">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="RATING"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:background="@android:color/white">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/ratingDriverImage"
                    android:layout_width="81dp"
                    android:layout_height="68dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/yellowprofile" />

                <TextView
                    android:id="@+id/ratingDriverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ratingDriverImage"
                    android:layout_marginStart="24dp"
                    android:text="Driver Name"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/ratingDriverModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ratingDriverName"
                    android:layout_marginStart="27dp"
                    android:text="SHL2190D"
                    android:textSize="10sp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/ratingDriverImage"
                    android:numStars="5"
                    android:stepSize="1" />

                <Button
                    android:id="@+id/submitRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="@android:color/white"
                    android:text="SUBMIT" />


            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/ic_gps"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/linearLayout1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_gps" />


    </RelativeLayout>

</FrameLayout>