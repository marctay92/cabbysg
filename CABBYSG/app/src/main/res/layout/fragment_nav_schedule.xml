<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav_schedule">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="62dp"
            android:layout_weight="0"
            android:gravity="center"
            android:text="SCHEDULE"
            android:textColor="#2C2C2C"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!--
      Trip 1
      -->
        <RelativeLayout
            android:id="@+id/relLayout1"
            android:layout_width="360dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/yellow_rectangle_box1"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/yellow_rectangle_box" />

            <ImageView
                android:id="@+id/sample1"
                android:layout_width="109dp"
                android:layout_height="90dp"
                android:layout_alignStart="@+id/date1"
                android:layout_alignTop="@+id/profile1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/white_rectangle_box" />

            <ImageView
                android:id="@+id/profile1"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="140dp"
                android:src="@drawable/profile" />

            <ImageView
                android:id="@+id/star1"
                android:layout_width="13dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/sample1"
                android:layout_centerHorizontal="true"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/sampletext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/name1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="43dp"
                android:text="MAP TRIP
SCHEDULE"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="12dp"
                android:layout_toStartOf="@+id/name1"
                android:text="14 APRIL 18 | 13:40"
                android:textColor="#2C2C2C"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/profile1"
                android:layout_below="@+id/profile1"
                android:text="John Tan"
                android:textColor="#2C2C2C" />

            <TextView
                android:id="@+id/tripfare1"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/profile1"
                android:text="$ 20.00"
                android:textColor="#2C2C2C" />

            <TextView
                android:id="@+id/sgd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/profile1"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="11dp"
                android:text="SGD"
                android:textColor="#2C2C2C"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/sample1"
                android:layout_toStartOf="@+id/star1"
                android:text="4.5"
                android:textColor="#2C2C2C" />

            <View
                android:layout_width="2dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/sgd1"
                android:layout_gravity="center"
                android:layout_marginEnd="79dp"
                android:background="#a40404" />


        </RelativeLayout>
        <!--
        Trip 2
        -->
        <RelativeLayout
            android:id="@+id/relLayout2"
            android:layout_width="360dp"
            android:layout_height="135dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/yellow_rectangle_box2"
                android:layout_width="362dp"
                android:layout_height="130dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/yellow_rectangle_box" />

            <ImageView
                android:id="@+id/sample2"
                android:layout_width="111dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="11dp"
                android:src="@drawable/white_rectangle_box" />

            <TextView
                android:id="@+id/sampletext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="37dp"
                android:text="MAP TRIP
SCHEDULE"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/sampletext2"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="84dp"
                android:text="09 APRIL 18 | 20:00"
                android:textColor="#2C2C2C" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/sampletext2"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="-27dp"
                android:layout_marginEnd="128dp"
                android:text="Lee Bee"
                android:textColor="#2C2C2C" />

            <TextView
                android:id="@+id/carplateno2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="32dp"
                android:layout_marginEnd="118dp"
                android:text="SHN9372X"
                android:textColor="#2C2C2C" />

            <TextView
                android:id="@+id/tripfare2"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/date2"
                android:text="$18.00"
                android:textColor="#2C2C2C" />

            <TextView
                android:id="@+id/sgd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carplateno2"
                android:layout_marginTop="-32dp"
                android:layout_toStartOf="@+id/carplateno2"
                android:text="SGD"
                android:textColor="#2C2C2C"
                android:textSize="8sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>