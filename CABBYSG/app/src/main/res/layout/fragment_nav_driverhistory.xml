<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".nav_driverhistory">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/historyBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/HistoryTitle"
            android:layout_toStartOf="@+id/HistoryTitle"
            android:layout_marginRight="30dp"
            android:src="@drawable/back_button_icon"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/HistoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_above="@+id/detailedHistory"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0"
            android:gravity="center"
            android:text="HISTORY"
            android:textColor="#2C2C2C"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/monthlyHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

            <ImageView
                android:id="@+id/history2BlackBox"
                android:layout_width="310dp"
                android:layout_height="160dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="87dp"
                android:src="@drawable/black_rectangle_box" />


            <TextView
                android:id="@+id/month"
                android:layout_width="150dp"
                android:layout_height="42dp"
                android:layout_alignTop="@+id/history2BlackBox"
                android:layout_toStartOf="@+id/earning"
                android:paddingLeft="35dp"
                android:paddingTop="10dp"
                android:text="MONTH"
                android:textColor="#FFEE7C"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/earning"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_above="@+id/thismonth"
                android:layout_alignStart="@+id/firstvalue"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="TOTAL EARNING"
                android:textColor="#FFEE7C"
                android:textSize="18dp" />

            <View
                android:layout_width="306dp"
                android:layout_height="1dp"
                android:layout_below="@+id/lastmonth"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="#FFEE7C" />

            <View
                android:layout_width="306dp"
                android:layout_height="1dp"
                android:layout_alignStart="@+id/month"
                android:layout_below="@+id/month"
                android:layout_gravity="center"
                android:layout_marginStart="-10dp"
                android:background="#FFEE7C" />

            <View
                android:layout_width="306dp"
                android:layout_height="1dp"
                android:layout_below="@+id/thismonth"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="#FFEE7C" />

            <View
                android:id="@+id/line1"
                android:layout_width="2dp"
                android:layout_height="156dp"
                android:layout_alignTop="@+id/earning"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="#FFEE7C" />

            <TextView
                android:id="@+id/thismonth"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/month"
                android:layout_below="@+id/month"
                android:textAlignment="center"
                android:textColor="#FFEE7C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lastmonth"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/month"
                android:layout_below="@+id/thismonth"
                android:textAlignment="center"
                android:textColor="#FFEE7C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/monthbefore"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/month"
                android:layout_below="@+id/lastmonth"
                android:textAlignment="center"
                android:textColor="#FFEE7C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/firstvalue"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/history2BlackBox"
                android:layout_below="@+id/month"
                android:textAlignment="center"
                android:textColor="#FFEE7C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/secondvalue"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/history2BlackBox"
                android:layout_below="@+id/thismonth"
                android:textAlignment="center"
                android:textColor="#FFEE7C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/thirdvalue"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/history2BlackBox"
                android:layout_alignEnd="@+id/history2BlackBox"
                android:textAlignment="center"
                android:textColor="#FFEE7C"
                android:textSize="14sp" />

        </RelativeLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/detailedHistory"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorBackground"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <RelativeLayout
                    android:id="@+id/relLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp">

                    <ListView
                        android:id="@+id/dList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="0" />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>