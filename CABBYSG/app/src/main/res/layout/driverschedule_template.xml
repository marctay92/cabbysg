<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relLayout"
        android:layout_width="360dp"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/yellow_rectangle_box1"
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/yellow_rectangle_box" />

        <ImageView
            android:id="@+id/ds_profile"
            android:layout_width="100dp"
            android:layout_height="92dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/profile" />

        <ImageView
            android:id="@+id/star1"
            android:layout_width="13dp"
            android:layout_height="18dp"
            android:layout_centerInParent="true"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/phoneicon"
            android:layout_width="17dp"
            android:layout_height="33dp"
            android:layout_alignStart="@+id/ds_rating"
            android:layout_below="@+id/star1"
            android:src="@drawable/phoneicon" />

        <ImageView
            android:id="@+id/messageicon"
            android:layout_width="21dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/phoneicon"
            android:layout_centerHorizontal="true"
            android:src="@drawable/messageicon" />

        <ImageView
            android:id="@+id/noteicon"
            android:layout_width="14dp"
            android:layout_height="28dp"
            android:layout_alignStart="@+id/emptycircle1"
            android:layout_below="@+id/ds_price"
            android:src="@drawable/noteicon" />

        <TextView
            android:id="@+id/ds_note"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_below="@+id/phoneicon"
            android:layout_marginTop="-7dp"
            android:layout_toStartOf="@+id/sgd1"
            android:hint="Addtional Notes"
            android:paddingLeft="2dp"
            android:text="Additional Note"
            android:textColor="#2C2C2C"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/ds_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:paddingLeft="10dp"
            android:text="14 APRIL 18"
            android:textColor="#2C2C2C"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ds_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/ds_date"
            android:paddingLeft="3dp"
            android:text="13:40"
            android:textColor="#2C2C2C"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ds_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/star1"
            android:layout_alignParentTop="true"
            android:layout_marginTop="47dp"
            android:text="John Tan"
            android:textColor="#2C2C2C" />

        <TextView
            android:id="@+id/ds_price"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/sgd1"
            android:text="20.00"
            android:textColor="#2C2C2C" />

        <TextView
            android:id="@+id/sgd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/line2"
            android:text="SGD "
            android:textColor="#2C2C2C"
            android:textSize="8sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ds_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="136dp"
            android:text="4.5  "
            android:textColor="#2C2C2C" />

        <View
            android:id="@+id/line1"
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/line2"
            android:layout_gravity="center"
            android:layout_marginEnd="97dp"
            android:background="#2C2C2C" />

        <View
            android:id="@+id/line2"
            android:layout_width="153dp"
            android:layout_height="1dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/ds_type"
            android:layout_gravity="center"
            android:layout_marginTop="-10dp"
            android:background="#2C2C2C" />

        <View
            android:id="@+id/line3"
            android:layout_width="154dp"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/line1"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:background="#2C2C2C" />

        <View
            android:id="@+id/line4"
            android:layout_width="154dp"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/noteicon"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:background="#2C2C2C" />

        <TextView
            android:id="@+id/fare1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/line1"
            android:layout_alignTop="@+id/sgd1"
            android:paddingLeft="5dp"
            android:text="Fare: "
            android:textColor="#2C2C2C"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dollarsign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sgd1"
            android:layout_marginTop="0dp"
            android:layout_toStartOf="@+id/ds_price"
            android:paddingLeft="5dp"
            android:text="$ "
            android:textColor="#2C2C2C"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ds_type"
            android:layout_width="46dp"
            android:layout_height="23dp"
            android:layout_below="@+id/star1"
            android:layout_toStartOf="@+id/ds_note"
            android:paddingLeft="2dp"
            android:text="Fastest"
            android:textColor="#2C2C2C"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/emptycircle1"
            android:layout_width="5dp"
            android:layout_height="61dp"
            android:layout_alignStart="@+id/blackcircle1"
            android:layout_alignTop="@+id/profile"
            android:src="@drawable/emptycircle" />

        <ImageView
            android:id="@+id/blackcircle1"
            android:layout_width="6dp"
            android:layout_height="115dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="128dp"
            android:src="@drawable/blackcircle" />

        <View
            android:id="@+id/dgreyspacebar"
            android:layout_width="2dp"
            android:layout_height="14dp"
            android:layout_alignStart="@+id/noteicon"
            android:layout_below="@+id/ds_date"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:background="#9D9D9D" />

        <TextView
            android:id="@+id/ds_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ds_profile"
            android:layout_toEndOf="@+id/noteicon"
            android:text="Ubi Mrt Station"
            android:textColor="#2C2C2C"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ds_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ds_name"
            android:layout_toEndOf="@+id/noteicon"
            android:text="Orchard Ion"
            android:textColor="#2C2C2C"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ds_cancel"
            android:layout_width="30dp"
            android:layout_height="31dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/cancelbutton" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>