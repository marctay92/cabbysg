<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav_driverhome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.lorentzos.flingswipe.SwipeFlingAdapterView
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rotation_degrees="15.5"
            tools:context=".nav_driverhome" />

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map1"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:context=".nav_driverhome" />

        <Switch
            android:id="@+id/location_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="13dp" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/black"
            android:baselineAligned="true"

            android:orientation="horizontal"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="140dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/app_logo" />

                <EditText
                    android:id="@+id/tripText"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="45dp"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="textPersonName"
                    android:text="TRIPS"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/noOfTrips"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="17dp"
                    android:focusable="false"
                    android:inputType="textPersonName"
                    android:text="245"
                    android:textColor="@color/yellow"
                    android:textSize="24sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="140dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/ratingText"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="45dp"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="textPersonName"
                    android:text="RATING"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="17dp"
                    android:focusable="false"
                    android:inputType="textPersonName"
                    android:text="4.8"
                    android:textColor="@color/yellow"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/yellowstar"
                    android:layout_width="66dp"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/yellowstar" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="132dp"
                android:layout_height="140dp"
                android:layout_weight="1">


                <EditText
                    android:id="@+id/cancellationText"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="45dp"
                    android:ems="10"
                    android:focusable="false"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:inputType="textPersonName"
                    android:text="CANCELLATION"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/cancellation"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:focusable="false"
                    android:inputType="textPersonName"
                    android:text="12.0%"
                    android:textColor="@color/yellow"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="85dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/cross" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="213dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/relLayout3"
                android:layout_width="340dp"
                android:layout_height="91dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:background="@drawable/blackborder"
                android:elevation="10dp">

                <ImageView
                    android:id="@+id/cancelRequest"
                    android:layout_width="35dp"
                    android:layout_height="36dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/cancel_button" />

                <TextView
                    android:id="@+id/reqLocation"
                    android:layout_width="195dp"
                    android:layout_height="37dp"
                    android:layout_above="@+id/reqDestination"
                    android:layout_alignStart="@+id/reqDestination"
                    android:background="@null"
                    android:text="Location"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/reqDestination"
                    android:layout_width="195dp"
                    android:layout_height="37dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="45dp"
                    android:background="@null"
                    android:text="Destination"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/white_circle" />

                    <TextView
                        android:id="@+id/reqFare"
                        android:layout_width="47dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:foregroundGravity="center_horizontal"
                        android:text="$13"
                        android:textAlignment="center"
                        android:textColor="@android:color/black" />


                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout4"
                android:layout_width="340dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:background="@drawable/blackborder"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/riderReqPhoto"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/arrivedBtn"
                        android:layout_width="83dp"
                        android:layout_height="38dp"
                        android:layout_marginRight="7dp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:text="I have arrived"
                        android:textSize="11sp" />

                    <Button
                        android:id="@+id/startTripBtn"
                        android:layout_width="83dp"
                        android:layout_height="38dp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:text="start trip"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="214dp"
                    android:layout_height="38dp"
                    android:layout_alignBottom="@+id/riderName"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="17dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/textDriver"
                        android:layout_width="39dp"
                        android:layout_height="38dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/text_driver" />

                    <ImageView
                        android:id="@+id/callDriver"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="0dp"
                        android:layout_weight="1"
                        android:paddingTop="3dp"
                        android:src="@drawable/call_driver" />
                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/riderReqPhoto"
                    android:layout_width="85dp"
                    android:layout_height="61dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/yellowprofile" />

                <TextView
                    android:id="@+id/riderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/riderReqPhoto"
                    android:layout_below="@+id/riderReqPhoto"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:text="Rider Name"
                    android:textColor="@color/colorAccent" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="213dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/relLayout5"
                android:layout_width="340dp"
                android:layout_height="91dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:background="@drawable/blackborder"
                android:elevation="10dp">

                <TextView
                    android:id="@+id/custLocation"
                    android:layout_width="195dp"
                    android:layout_height="37dp"
                    android:layout_above="@+id/custDestination"
                    android:layout_alignStart="@+id/custDestination"
                    android:background="@null"
                    android:text="Location"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/custDestination"
                    android:layout_width="195dp"
                    android:layout_height="37dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="45dp"
                    android:background="@null"
                    android:text="Destination"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/white_circle" />

                    <TextView
                        android:id="@+id/custFare"
                        android:layout_width="47dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:foregroundGravity="center_horizontal"
                        android:text="$13"
                        android:textAlignment="center"
                        android:textColor="@android:color/black" />


                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout6"
                android:layout_width="340dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:background="@drawable/blackborder"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="217dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="13dp"
                    android:layout_toEndOf="@+id/riderPhoto"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/endTripBtn"
                        android:layout_width="83dp"
                        android:layout_height="38dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:text="I have arrived"
                        android:textSize="11sp" />

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/riderPhoto"
                    android:layout_width="85dp"
                    android:layout_height="61dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/yellowprofile" />

                <TextView
                    android:id="@+id/custName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/riderPhoto"
                    android:layout_below="@+id/riderPhoto"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:text="Rider Name"
                    android:textColor="@color/colorAccent" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout4"
            android:layout_width="300dp"
            android:layout_height="348dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:color/black">

                <TextView
                    android:id="@+id/receiptTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="RECEIPT"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tripDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/receiptTextView"
                    android:layout_centerHorizontal="true"
                    android:text="14 ARPIL 2018, 13:41"
                    android:textColor="@color/colorAccent"
                    android:textSize="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="266dp"
                android:background="@android:color/background_light">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="64dp"
                    android:layout_marginTop="12dp"
                    android:text="$" />

                <LinearLayout
                    android:id="@+id/endtripLinear1"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="38dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="47dp"
                            android:layout_weight="1"
                            android:text="FARE" />

                        <EditText
                            android:id="@+id/finalFare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="42dp"
                            android:hint="00.00"
                            android:inputType="numberDecimal"
                            android:textSize="14sp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/endTripLinear2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="99dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="33dp"
                            android:layout_weight="1"
                            android:text="TOLL FEE" />

                        <EditText
                            android:id="@+id/tollFees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="42dp"
                            android:layout_weight="1"
                            android:hint="00.00"
                            android:inputType="numberDecimal"
                            android:textSize="14sp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="66dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="40dp"
                            android:text="TOTAL" />

                        <TextView
                            android:id="@+id/totalFare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="42dp"
                            android:text="00.00"
                            android:textSize="16sp" />

                    </RelativeLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/confirmReceipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:background="@android:color/white"
                    android:text="confirm" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="345dp"
            android:layout_height="305dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="134dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="26dp"
                    android:alpha="0.8"
                    android:text="FROM"
                    android:textColor="@android:color/black"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_centerVertical="true"
                    android:alpha="0.8"
                    android:text="TO"
                    android:textColor="@android:color/black"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/startingLocation"
                    android:layout_width="247dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_marginStart="55dp"
                    android:text="Location"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/endingDestination"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/startingLocation"
                    android:layout_alignTop="@+id/textView3"
                    android:text="Destination"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_marginBottom="24dp"
                    android:alpha="0.8"
                    android:text="Total:"
                    android:textColor="@android:color/black"
                    android:textSize="8sp" />


                <TextView
                    android:id="@+id/totalTripFare"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/startingLocation"
                    android:layout_alignTop="@+id/textView4"
                    android:layout_marginEnd="189dp"
                    android:text="$14.50"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/paymentMethodImageView"
                    android:layout_width="43dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="-179dp"
                    android:layout_marginTop="90dp"
                    android:layout_toEndOf="@+id/totalTripFare" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="167dp"
                android:background="@android:color/white">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/ratingRiderImage"
                    android:layout_width="81dp"
                    android:layout_height="68dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/yellowprofile" />

                <TextView
                    android:id="@+id/ratingRiderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ratingRiderImage"
                    android:layout_marginStart="24dp"
                    android:text="Rider Name"
                    android:textSize="10sp" />


                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="22dp"
                    android:layout_toEndOf="@+id/ratingRiderImage"
                    android:numStars="5"
                    android:stepSize="1" />

                <Button
                    android:id="@+id/submitRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="@android:color/white"
                    android:text="SUBMIT" />


            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
</FrameLayout>